/* -----box----- */
/* #region */
.box {
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 4px 0 0 #e5e5e5;
    /* text-align: center; */
}

.box-center {
    margin: 50px auto 0 auto;
    width: 50%;
    padding: 40px 44px;
}

.box h1 {
    text-align: center;
}

.box form {
    padding: 15px;
    background-color: rgb(255 180 107 / 66%);
    border-radius: 5px;
    /* text-align: center; */
}

.box input[type="email"],
.box input[type="text"],
.box input[type="password"] {
    font-size: 22px;
    height: 48px;
    flex: 1;
    border-radius: 6px;
    background-color: #e3dcdc;
    border: solid 1px #9f6f6f;
    padding: 0 10px;
    overflow: hidden;
}

.box input[type="submit"],
.box input[type="reset"] {
    /* margin: 0 20px; */
    margin-top: 10px;
    background-color: #666;
    border: none;
    border-radius: 6px;
    color: #ffffff;
    cursor: pointer;
    font-size: 16px;
    height: 48px;
    width: 100px;
}

.box input[type="submit"]:hover,
.box input[type="reset"]:hover {
    background-color: #737373;
}

.box p {
    position: relative;
    left: 0;
}

.box textarea {
    font-size: 22px;
    background-color: #e3dcdc;
}


